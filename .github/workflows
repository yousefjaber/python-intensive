name: Python Linting and Formatting

on:
  push:
    branches:
      - lesson-5-2
  pull_request:
    branches:
      - lesson-5-2

jobs:
  lint:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install flake8 black

      - name: Run Linter
        run: |
          flake8 .

      - name: Run Formatter
        run: |
          black --check .
